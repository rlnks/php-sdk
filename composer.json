{
    "name": "rlnks/sdk",
    "description": "Official PHP SDK for the RLNKS API - Smart redirect and image routing",
    "keywords": [
        "rlnks",
        "sdk",
        "api",
        "redirect",
        "image",
        "routing",
        "a-b-testing"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "RLNKS",
            "email": "support@rlnks.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0|^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "mockery/mockery": "^1.6",
        "php-coveralls/php-coveralls": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "Rlnks\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rlnks\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover build/logs/clover.xml"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
